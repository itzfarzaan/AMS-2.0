<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Dashboard</title>
  <link rel="stylesheet" href="/studentstyle.css">
</head>
<body>
  <div id="studentRollNumber" data-roll-number="<%= studentRollNumber %>"></div>
  <!-- Navigation Bar -->
  <nav class="navbar">
    <div class="logo"> <!-- Add your college logo here --></div>
    <div class="welcome-text">Welcome <%= studentRollNumber %></div>
  </nav>

  <!-- Body -->
  <div class="dashboard-container">
    <!-- Display student information -->
    <div class="student-info">
      <h2>Student Information</h2>
      <p>Name: <%= studentName %></p>
      <p>Roll Number: <%= studentRollNumber %></p>
      <p>Class: <%= studentClass %></p>
      <!-- Display total attended classes -->
      <p>Total Attended Classes: <%= studentTotalAttendedClasses %></p>
      <p></p> <!--TEMP-->
    </div>

    <!-- Day Wise Attendance Table -->
    <div class="attendance-table">
      <h2>Day Wise Attendance</h2>
      <table>
        <!-- Table headers -->
        <thead>
          <tr>
            <th>S.No.</th>
            <th>Day and Date</th>
            <th>Total Classes Attended</th>
            <th>Total Number of Periods</th>
            <th>Attendance Percentage</th>
          </tr>
        </thead>
        <!-- Table data will be populated dynamically from the backend -->
        <tbody id="dayWiseAttendance">
          <!-- Data will be inserted here -->
        </tbody>
      </table>
    </div>
  </div>




<script> 

  const studentRollNumber = document.getElementById("studentRollNumber").getAttribute("data-roll-number");

  document.addEventListener("DOMContentLoaded", function () {
    // Function to fetch and update day-wise attendance data
    function updateDayWiseAttendance() {
  // Replace with the actual route for fetching day-wise attendance data
  const fetchUrl = `/api/getDayWiseAttendance/${studentRollNumber}`;

  // Make an AJAX request to fetch day-wise attendance data
  fetch(fetchUrl)
    .then((response) => response.json())
    .then((data) => {
      console.log("Fetched data:", data); // Log the fetched data to the console
      // Clear existing rows in the table
      const tbody = document.getElementById("dayWiseAttendance");
      tbody.innerHTML = "";

      // Variables to calculate sum and total classes attended
      let sumPercentage = 0;
      let totalClassesAttended = 0;

      // Populate the table with fetched data
      data.forEach((entry, index) => {
        const row = document.createElement("tr");
        row.innerHTML = `
          <td>${index + 1}</td>
          <td>${entry.dayAndDate}</td>
          <td>${entry.numberOfClasses}</td>
          <td>${entry.totalNumberOfPeriods}</td>
          <td>${entry.attendancePercentage}%</td>
          
        `;
        tbody.appendChild(row);

        
        totalClassesAttended += entry.totalNumberOfPeriods;
      });





      
      // Calculate average attendance percentage
      const averagePercentage = totalClassesAttended > 0 ? (( `<%= studentTotalAttendedClasses %>`/ totalClassesAttended)*100).toFixed(2) : 0;

      // Display the total attended classes and average percentage in student information
      const totalClassesElement = document.querySelector(".student-info p:nth-child(6)");
      totalClassesElement.innerHTML = `Total Attended Classes: ${totalClassesAttended} | Average Attendance Percentage: ${averagePercentage}%`;
    })
    .catch((error) => console.error("Error fetching day-wise attendance:", error));
}

    // Initial call to fetch and update day-wise attendance data
    updateDayWiseAttendance();
  });
</script>

</body>
</html>
